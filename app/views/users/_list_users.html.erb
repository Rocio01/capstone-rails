<% @users.each do |user|%>

<div class="card" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <%= gravatar_for user, size: 80 %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
       
        <p class="card-text"><%=  user.name %></p>
    
      </div>
    </div>
  </div>
</div>

  <% end %>