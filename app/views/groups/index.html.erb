<% provide(:title, "Groups") %>


<div class="card" style="max-width: 540px;">
	<div class="row g-0"> 
		<div >
			<h1 class="card-text"> Total groups: <%= @groups.count %> </h1>
       <h2> <%= link_to " New Group", "groups/new" %> </h2>
		</div>

	</div>
</div>




 
<% @groups.each do |group|%>
 <div class="card" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                 <img src="<%= group.icon%>" class=" icon" alt="icon" >
             </div>
             <div class="col-md-4">
                    <div class="card-body">
                        <p class="card-title"> <%= link_to "#{group.name}", group %></p>
                        
                        <small class="card-text"> Created at: <%= group.created_at.strftime("%d-%b-%Y") %></small>
                        
                    </div>
             </div>
             <div class="col-md-4">
                    <div class="card-body">
                      <p class="card-text"><%= link_to "delete", group, method: :delete, data: { confirm: "Are you sure?"} %> </p>
                        
                    </div>
            </div>
    </div>
 </div>
  <% end %>