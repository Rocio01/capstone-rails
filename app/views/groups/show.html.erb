<%  provide(:title, @group.name ) %> 

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <span>
        <img src="<%= @group.icon%>" class=" icon" alt="icon" >          
       <h3> <%= @group.name %> </h3>
       <p> Created at: <%= @group.created_at.strftime("%d-%b-%Y") %> </p>
        <%= link_to "delete", @group, method: :delete, 
                                      data: { confirm: "Are you sure?"} %>        
      </span>
      <%= link_to " New Group", "new" %>
    </section>
 </aside>   
      
   <div class="col-md-8"> 
   
     <% if @group.activities.any? %>      

       <h3>  The group contains <%= @group.activities.count%> <%= "Activity".pluralize(@group.activities.count) %> . </h3>
        <ol class="activities">
         
          <% @group.activities.each do |activity| %>
          <li>         
            <p class="name"><%= activity.name %> </p>
            <p class="user"> Author: <%= link_to activity.user.name, activity.user %> </p>
            <p class="timestamp">
                Created at: <%= activity.created_at.strftime("%d-%b-%Y") %> 
            </p>
          </li>
          <% end %>
        </ol>
     <% end %>
  </div>
          


</div>