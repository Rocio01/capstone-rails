<% @activities.each do |activity|%>
 <div class="card" style="max-width: 540px;">
        <div class="row g-0">
             <div class="col-md-4">
                   <p class="card-title"> Activity name <%= link_to "#{activity.name}", activity %></p>
                   <p> Author: <%= activity.user.name %> </p>     
                   <small class="card-text"> Created at: <%= activity.created_at.strftime("%d-%b-%Y") %></small>             
             </div>
             <div class="col-md-4">
                    <div class="card-body">   
                        <p>Time: <%= activity.activity_time %><%= "Hour".pluralize(activity.activity_time) %>. </p>                      

                    </div>
             </div>
             <div class="col-md-4">
                    <div class="card-body">
                      <p class="card-text"><%= link_to "delete", activity, method: :delete, data: { confirm: "Are you sure?"} %> </p>
                        
                    </div>
            </div>
    </div>
 </div>
  <% end %>